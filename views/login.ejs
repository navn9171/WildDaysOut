<%- include('./partials/header') -%>


<div class="container my-4" style="padding: 0% 20%; ">
  <div style="border: 2px solid rgb(253, 199, 199); padding: 10% 7%; border-radius: 5%; box-shadow: 10px 9px 124px tomato;">
<h1 style="text-align: center;">Login</h1>
<form action="/login" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1"><strong>Username</strong> </label>
      <input style="box-shadow: 0px 0px 8px black;" type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username">
      <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1"><strong>Password</strong> </label>
      <input style="box-shadow: 0px 0px 8px black;" type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
</div>
</div>

